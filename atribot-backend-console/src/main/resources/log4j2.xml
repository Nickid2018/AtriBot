<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="SysOut" target="SYSTEM_OUT">
			<PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger]: %msg%n"/>
			<Filters>
				<MarkerFilter marker="ATRIBOT_NETWORK" onMatch="DENY" onMismatch="NEUTRAL"/>
				<ThresholdFilter level="INFO" onMatch="NEUTRAL" onMismatch="DENY"/>
				<BurstFilter level="INFO" rate="16" maxBurst="100"/>
			</Filters>
		</Console>
		<RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger]: %msg%n"/>
			<Filters>
				<MarkerFilter marker="ATRIBOT_NETWORK" onMatch="DENY" onMismatch="NEUTRAL"/>
				<ThresholdFilter level="DEBUG" onMatch="NEUTRAL" onMismatch="DENY"/>
			</Filters>
			<Policies>
				<TimeBasedTriggeringPolicy/>
				<OnStartupTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="20 MB"/>
			</Policies>
			<DefaultRolloverStrategy max="50"/>
		</RollingRandomAccessFile>
		<File name="NetworkLog" fileName="logs/network.log" append="false">
			<PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger]: %msg%n"/>
			<Filters>
				<MarkerFilter marker="ATRIBOT_NETWORK" onMatch="ACCEPT" onMismatch="DENY"/>
				<ThresholdFilter level="DEBUG" onMatch="NEUTRAL" onMismatch="DENY"/>
			</Filters>
		</File>
	</Appenders>
	<Loggers>
		<Logger name="io.netty" level="ERROR"/>
		<Root level="DEBUG">
			<AppenderRef ref="SysOut"/>
			<AppenderRef ref="File"/>
			<AppenderRef ref="NetworkLog"/>
		</Root>
	</Loggers>
</Configuration>